@{
    ViewBag.Title = "Delete";
}

<h2>Order Deleting</h2>


@using (Html.BeginForm("Delete", "Order_", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    int j = 1;
    int oderId=Convert.ToInt32(Session["OrderId"].ToString());
<table>
