<div class="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="logo">
                    <h1><a href="#">CJ VINA - Service Desk</a></h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-wrapper" style="width:500px">
                <div class="box">
                    <div class="content-wrap">
                        <h6>Sign In</h6>
                        @using (Html.BeginForm())
                        {
                            <div>
                                @Html.EditorFor(model => model.Emp_CJ, new { htmlAttributes = new { @class = "form-control", @placeholder = "User Id" } })
                                @Html.ValidationMessageFor(model => model.Emp_CJ, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationMessage("LogonF", new { @class = "text-danger" })

                            <div class="action">
                                <input class="btn btn-primary signup" type="submit" value="Login" />
                            </div>

                        }
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-heading">

        <div class="panel-options">
            <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
            <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
        </div>
    </div>
    <div class="panel-body" style="font-family: 'Open Sans', sans-serif; font-size: 12px; padding:320px;">
        <table class="table table-hover" border="0" id="example" aria-describedby="example_info">
            <thead>
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        Document Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in new ServiceDeskEntities().Documents.Select(d => new { d.Code, d.Id, d.FileName }).OrderBy(i => i.Code))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.ActionLink(item.FileName, "Get_file", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
