@model Web_IT_HELPDESK.BIZ_TRIP

@{
    ViewBag.Title = "dept_confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DEPARTMENT CONFIRMATION</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<!-- Modal -->
<div id="messageModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thông báo!!!</h4>
            </div>
            <div class="modal-body">
                <div style="text-align: center">
                    <p id="msgNotify">This is message.</p>
                    <p>************** Thank you!!! **************</p>
                </div>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Close", "Index", "BIZ_TRIP", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("dept_confirm", "BIZ_TRIP", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>BIZ_TRIP</legend>

        @Html.HiddenFor(model => model.NO)
        @Html.HiddenFor(model => model.ID)

        <table style="width:100%">
            <tr>
                <th> Employee no - /Mã nhân viên/ </th>
                <th>
                    @Html.TextBoxFor(model => model.EMPNO, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.EMPNO)

                </th>
            </tr>

            <tr>
                <th> Employee name - /Họ tên nhân viên/  </th>
                <th>
                    <br />
                    @Html.TextBoxFor(model => model.NAME, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.NAME)
                </th>
            </tr>
            <tr>
                <th> @Html.LabelFor(model => model.DEPT)    -  /Mã phòng ban/ </th>
                <th>
                    <br />
                    @Html.TextBox("DEPT", (string)ViewBag.DEPT, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.DEPT)
                </th>
            </tr>
            <tr>
                <th> DepartmentName    -  /Tên phòng ban/ </th>
                <th>
                    <br />
                    @Html.TextBox("DepartmentName", (string)ViewBag.DepartmentName, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                </th>
            </tr>
            <tr>
                <th> Description -  /Nội dung công tác/  </th>
                <th>
                    <br />
                    @Html.TextBox("DESCRIPTION", null, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "width:300px", cols = "50" })
                </th>
            </tr>
            <tr>
                <th> Vehicle - /Phương tiện công tác/ </th>
                <th>
                    <br />
                    @Html.TextBoxFor(model => model.VEHICLE, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.VEHICLE)
            </tr>
            <tr>
                <th> Contact company - /Công ty liên hệ/ </th>
                <th>
                    <br />
                    @Html.TextBox("CONTACT_COMPANY", null, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "width:300px" })
                </th>
            </tr>
            <tr>
                <th> Contact person - /Người liên hệ/ </th>
                <th>
                    <br />
                    @Html.TextBox("CONTACT_PERSON", null, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "width:300px" })
                </th>
            </tr>
            <tr>
                <th> Contact Dept - /Phòng ban liên hệ/  </th>
                <th>
                    <br />
                    @Html.TextBox("CONTACT_DEPT", null, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "width:300px" })
                </th>
            </tr>
            <tr>
                <th> @Html.LabelFor(model => model.DATE)  -  /Ngày tạo/ </th>
                <th>
                    <br />
                    @Html.TextBoxFor(model => model.DATE, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.DATE)
                </th>
            </tr>
            <tr>
                <th> @Html.LabelFor(model => model.FROM_DATE) </th>
                <th>
                    <br />
                    @Html.TextBoxFor(model => model.FROM_DATE, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.FROM_DATE)
                </th>

            </tr>
            <tr>
                <th> @Html.LabelFor(model => model.TO_DATE) </th>
                <th>
                    <br />
                    @Html.TextBoxFor(model => model.TO_DATE, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.TO_DATE)
                </th>
            </tr>
            <tr>
                <th> @Html.LabelFor(model => model.USED_EQUIPMENT) </th>
                <th>
                    <br />
                    @Html.EditorFor(model => model.USED_EQUIPMENT, new { @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.USED_EQUIPMENT)
                </th>
            </tr>
            <tr>
                <th> Bring Equipment - Mang thiết bị  </th>
                <th>
                    <br />
                    @Html.TextBoxFor(model => model.REMARK, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#FFFFFF;" })
                    @Html.ValidationMessageFor(model => model.REMARK)
                </th>
            </tr>
            <tr>
                <th>  Department Confirmantion   -  /Duyệt của trưởng phòng/ </th>
                <th>
                    <br />
                    @Html.EditorFor(model => model.DEPT_CONFIRM)
                    @Html.ValidationMessageFor(model => model.DEPT_CONFIRM)
                </th>
            </tr>
            <tr>
                <th>  <input type="file" id="image" name="image" /></th>
                <th>  <br /><input type="submit" value="  Save  " />  </th>
            </tr>
        </table>

    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Script {
    <script type="text/javascript">
         $('#messageModal').on('shown.bs.modal', function (e) {
            var message = '@Html.Raw(ViewBag.Message)';
            var modal = $(this);
            var msgPlace = modal.find('.modal-body p#msgNotify');
            msgPlace.text(message);
        });

        $('#messageModal').modal('@ViewBag.ModalState');
    </script>
}