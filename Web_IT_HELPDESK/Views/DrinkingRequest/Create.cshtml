@model Web_IT_HELPDESK.Drinking_Request

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "DrinkingRequest", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Service Request - Yêu cầu dịch vụ</legend>

          <div class="editor-label">
            @Html.LabelFor(model => model.Employee_name)  -   /Tên người yêu cầu/
        </div>
         <div class="editor-field">
           @Html.TextBox("Employee_name", null, new { id = "add confirm", type = "string", required = "required" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Quantity)  -   /Số lượng/
        </div>
        <div class="editor-field">
       @Html.TextBox("Quantity", null, new { id = "add confirm", type = "number", required = "required" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Unit)  -   /Đơn vị tính/
        </div>
        <div class="editor-field">
            @Html.TextBox("Unit", null, new { id = "add confirm", type = "string", required = "required" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Note)  -   /Ghi chú sử dụng/
        </div>
        <div class="editor-field">
         @Html.TextBox("Note", null, new { id = "add confirm", type = "string", required = "required" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)  -   /Ngày/
        </div>
        <div class="editor-field">
           @Html.TextBoxFor(model => model.Date, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()" , @style="background-color:#DEDEDE;"})
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DepartmentId)  -  /Mã phòng ban/
        </div>
        <div class="editor-field">
            @Html.TextBox("DepartmentId", (string)ViewBag.DepartmentId,new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style="background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.DepartmentId)
        </div>
      
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
