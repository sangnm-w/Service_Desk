@model Web_IT_HELPDESK.Seal_Using

@{
    ViewBag.Title = "Seal Using Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Confirm</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Seal_Using</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Plant)    -  /Plant/
        </div>
        <div class="editor-field">
            @Html.TextBox("Plant", (string)ViewBag.Plant, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Plant)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)  -  /Ngày tạo/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Date, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Employee_name)  -  /Người tạo/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Employee_name, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Employee_name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Type_document)  -  /Loại văn bản/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Type_document, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Type_document)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DepartmentId)  -  /Mã phòng ban/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DepartmentId, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.DepartmentId)
        </div>
        <div class="editor-label">
            DepartmentName    -  /Tên phòng ban/
        </div>
        <div class="editor-field">
            @Html.TextBox("DepartmentName", (string)ViewBag.DepartmentName, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Code_number)  -  /Số hiệu văn bản/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Code_number, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Code_number)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Context)  -  /Nội dung văn bản/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Context, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Context)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Place_Recipient)  -  /Nơi nhận văn bản/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Place_Recipient, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Place_Recipient)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Period_date)  -  /Ngày hiệu lực/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Period_date, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Period_date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name_signature)  -  /Người ký văn bản/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name_signature, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Name_signature)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Employee_Seal_keep)  -  /Ngày duyệt cấp 2/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Employee_Seal_keep, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Employee_Seal_keep)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Department_confirm)  -   /Duyệt tại cấp phòng ban/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Department_confirm, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Department_confirm)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Department_note)-  /Xác nhận duyệt (bắt buộc)/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Department_note, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Department_note)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Department_confirm_date) -  /Ngày trưởng phòng duyệt/
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Department_confirm_date, new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style = "background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Department_confirm_date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Employee_Seal_keep_confrim) -  /Duyệt cấp 2/
        </div>
        @if (Model.Employee_Seal_keep_confrim == true)
        {
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.Employee_Seal_keep_confrim, new { @disabled = "disabled" })
                @Html.Label("APPROVED")
                @Html.ValidationMessageFor(model => model.Employee_Seal_keep_confrim)
            </div>
        }
        else
        {
            @Html.CheckBoxFor(model => model.Employee_Seal_keep_confrim)
            @Html.Label("Check to APPROVE")
            @Html.ValidationMessageFor(model => model.Employee_Seal_keep_confrim)
        }
        <div class="editor-label">
            @Html.LabelFor(model => model.Employee_Seal_keep_note) -  /Xác nhận duyệt cấp 2/
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Employee_Seal_keep_note)
            @Html.ValidationMessageFor(model => model.Employee_Seal_keep_note)
        </div>

        @if (Model.Employee_Seal_keep_confrim != true)
        {
            <p>
                <input type="submit" value="Save" />
            </p>
        }
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>