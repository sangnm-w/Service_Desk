<div class="row">
    <div class="col-md-12 panel-warning">
        <div class="content-box-header panel-heading">
            <div class="panel-title ">Survey Form</div>

            <div class="panel-options">
                <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
            </div>
        </div>
        <div class="content-box-large box-with-header">
            @using (Html.BeginForm("Submit_", "Home", FormMethod.Post))
            {
                int j = 0;
                <h1>Khảo sát đào tạo</h1>
                <br />
                foreach (var item_question in new ServiceDeskEntities().QUESTIONs.Where(i => i.DEL != true))
                {
                    double questionNo = Convert.ToDouble(item_question.NO);

                    if (questionNo < 9)
                    {
                        <div class="form-group">
                            <label>
                                @(questionNo + 1)<span> ) .   </span>
                                @item_question.QUESTION_CONTENT.ToString().ToUpper().Replace("\\", "    \\    ")
                            </label>
                            <textarea class="form-control" name="answertexts[@questionNo]" rows="1" placeholder="Ghi chú đóng góp"></textarea>
                            <input type="text" name="questions[@questionNo]" value="@item_question.ID" hidden="hidden" />
                        </div>
                    }
                    else
                    {
                        if (questionNo == 9)
                        {
                            <br />
                            <div class="form-group">
                                <label>
                                    @(questionNo + 1) <span> ) .   </span>
                                    @item_question.QUESTION_CONTENT.ToString().ToUpper().Replace("\\", "    \\    ")
                                </label>
                            </div>
                        }
                        else
                        {
                            <div class="form-group" style="margin-left: 20px;">
                                <br />
                                <label>
                                    @item_question.QUESTION_CONTENT.ToString().ToUpper().Replace("\\", "    \\    ")
                                </label>
                                <br />
                                <input type="radio" name="answerRadios[@j]" value="Hoàn toàn không cần thiết" />
                                <label style="color:blue; padding-right: 20px;"> 1) Hoàn toàn không cần thiết </label>
                                <input type="radio" name="answerRadios[@j]" value="Không cần thiết" />
                                <label style="color:blue; padding-right: 20px;"> 2) Không cần thiết </label>
                                <input type="radio" name="answerRadios[@j]" value="Không ý kiến" checked="checked" />
                                <label style="color:blue; padding-right: 20px;"> 3) Không ý kiến </label>
                                <input type="radio" name="answerRadios[@j]" value="Cần thiết" />
                                <label style="color:blue; padding-right: 20px;"> 4) Cần thiết </label>
                                <input type="radio" name="answerRadios[@j]" value="Rất cần thiết" />
                                <label style="color:blue; padding-right: 20px;"> 5) Rất cần thiết </label>
                            </div>
                            j++;
                        }
                    }
                }
                <br />
                <div>
                    <input type="submit" value="Submit" />
                </div>
            }
            <br /><br />
        </div>
    </div>
</div>

