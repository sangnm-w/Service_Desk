@model Web_IT_HELPDESK.Document

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Document</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Emp_CJ)
        </div>
        <div class="editor-field">
            @Html.TextBox("Emp_CJ", (string)ViewBag.User_create,new { @class = "text-box single-line", @readonly = "readonly", onfocus = "this.blur()", @style="background-color:#DEDEDE;" })
            @Html.ValidationMessageFor(model => model.Employee.Emp_CJ)
        </div>

           <div class="editor-label">
            @Html.LabelFor(model => model.DocumentType.DocumentTypeId,"DocumentType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DocumentTypeId")
            @Html.ValidationMessageFor(model => model.DocumentType.DocumentTypeId)
        </div>


          <div class="editor-label">
            @Html.LabelFor(model => model.FileName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FileName)
            @Html.ValidationMessageFor(model => model.FileName)
        </div>
         <p>
        <input type="file" id="image" name="image"/>
        </p>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
